{
  "manifest_version": 3,
  "name": "Sidebarzz",
  "version": "1.0.0",
  "description": "Manage workspaces, bookmarks, and tabs from a fixed side panel",
  "author": "Shimmy",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "bookmarks",
    "storage",
    "scripting",
    "sidePanel",
    "history",
    "favicon"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Sidebarzz",
    "default_popup": "dist/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "side_panel": {
    "default_path": "dist/sidepanel.html"
  },
  "options_page": "dist/options.html",
  "chrome_url_overrides": {
    "newtab": "dist/newtab.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "css": ["dist/sidebar.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["dist/content.js", "dist/sidebar.css"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["_favicon/*"],
      "matches": ["<all_urls>"],
      "extension_ids": ["*"]
    }
  ]
}
